{
  "extends": "../../infra/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out/test",
    "rootDir": ".",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../test/test/**/*"
  ]
}